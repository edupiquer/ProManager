<Application x:Class="ProManager.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:ProManager.Wpf.ViewModels"
             xmlns:views="clr-namespace:ProManager.Wpf.Views"
             xmlns:local="clr-namespace:ProManager.Wpf">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Common.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewmodels:TeamsViewModel}">
                <views:TeamsView/>
            </DataTemplate>
        </ResourceDictionary>

    </Application.Resources>
</Application>
